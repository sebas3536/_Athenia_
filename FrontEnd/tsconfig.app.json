/* tsconfig.app.json */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "@shared/*": ["src/app/shared/*"],
      "@core/*": ["src/app/core/*"],
      "@domain/*": ["src/app/domain/*"],
      "@features/*": ["src/app/features/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/test.ts"
  ]
}
